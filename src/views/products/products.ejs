<!DOCTYPE html>
<html lang="en">
<%- include ('../partials/head.ejs') %>
<body>
    <%- include ('../partials/header.ejs') %>  

	<h4 class="productosE">Productos</h4>			
	<div class="conteiner">
	<section class="botellas"> <!--grid-->
						<% products.forEach(products => {%>
							<article class="listadoDeProductos"> <!--card-->
						<a href="/products/<%=products.id%>"><img src="/images/<%=products.imagenes%>" alt="productos"> </a>
						<div class="btn-actions">
						<p class="prices">Nombre: <%=products.nombre%></p>
						<p class="prices"><%=products.precio%></p>
						<p class="prices"><%=products.descripcion%></p>
						<p class="prices">Stock: <%=products.stock%></p>
					</div>
					<div class="boton-comprar-products">
                        <a href="/products/<%=products.id%>"><button type="submit" class="boton-comprar-products">Comprar</button></a>
                    </div>
					</article>
							<% }) %>
						
					</section>
				</div>               
    <%- include ('../partials/footer.ejs') %>  
</body>
</html>