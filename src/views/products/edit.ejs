<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <!-- Header -->    
    <%- include('../partials/header') %>
    <!-- Sección principal -->
    <section class="registro-login">
        <div class="carga-un-nuevo-producto"> <h3 class="carga-un-nuevo-producto" >Editá tu producto </h3> </div>
        <form class="form" action="/products/<%= products.id %>?_method=PUT" method="POST">
            <!-- Nombre del Producto -->
            <div class="categoria-create-edit" > Nombre del producto: </div>
            <div class="datos">
                <input type="text" name="nombre" placeholder="Nombre del Producto" value="<%= products.nombre %>">    
            </div>
            <!-- Descripción del Producto -->
            <div class="categoria-create-edit"> Descripción del Producto: </div>
            <div class="datos" >
                <textarea class="descripcion-del-producto-create-edit" name="descripcion"> <%= products.descripcion %>  </textarea>    
            </div>
            <!-- Imágenes -->
            <!-- Deberían aparecer las imágenes actuales --> 
            <div class="datos-imagen">
                <input type="file" name="imagenesDelProducto" multiple>    
            </div>              
            <!-- Categoría -->
            <!-- Debería estar seleccionada (checked) la categoría actual --> 
            <div>
                <div class="categoria-create-edit"> Categoría: </div>
                <div class="create-edit-checkbox">
                <label> <input type="radio" name="categoria" value="Vinos" <%= products.categoria == "Vinos" ? "checked" : "" %>> Vinos </label>
                </div>
                <div class="create-edit-checkbox">
                <label> <input type="radio" name="categoria" value="Espirituosas" <%= products.categoria == "Espirituosas" ? "checked" : "" %>> Espirituosas </label>
                </div>
                <div class="create-edit-checkbox">
                <label> <input type="radio" name="categoria" value="Cervezas"> Cervezas </label>
                </div>
                <div class="create-edit-licores">
                <label> <input type="radio" name="categoria" value="Licores"> Licores </label>
                </div> 
            </div>
            <!-- Precio --> 
            <div class="datos">
                <input type="text" name="precio" placeholder="Precio (Ej: $ 799,99)" value="<%= products.precio %>">    
            </div>
            <!-- Stock -->
            <div class="datos">
                <input type="text" name="stock" placeholder="Stock (Ej: 100)" value="<%= products.stock %>">    
            </div>
            <!-- Enviar -->
            <div class="datos">
                <button class="boton-create-edit" type="submit"> Enviar </button>
            </div>
            <div class="datos">
                <button class="boton-create-reset" type="reset"> Borrar </button>
            </div>
        </form>
    </section>
    <%- include('../partials/footer') %>
</body>
</html>